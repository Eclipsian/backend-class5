model Student {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  age       Int
  grade     String

  order     Order[]
}



model Product {
  id       Int    @id @default(autoincrement())
  title    String
  price    Int
  quantity Int

  order    Order? @relation(fields: [orderId], references: [id])
  orderId  Int?
}



model Order {
  id        Int      @id @default(autoincrement())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId Int
  products  Product[]
}

